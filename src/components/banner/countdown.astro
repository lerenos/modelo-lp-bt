---
let {title, text, time, bgcolor} = Astro.props
import Counter from '@components/banner/counter.astro'

let bgclass = bgcolor ? (bgcolor.startsWith('#') ? `bg-[${bgcolor}]` : bgcolor) : 'bg-[#FF2020]'

---
<section class:list={["py-6 text-center font-bold text-white", bgclass]}>
    <h2 set:html={title} class="uppercase tracking-tight mb-4" />
    <Counter time={time} />
    <p set:html={text} class="text-2xl md:text-4xl my-4"/>
</section>
